<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tom.one.fragment.ChildHomeFragment">

    <ImageView
        android:id="@+id/iv_child_home"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_child_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/iv_child_home"
        android:text="aaa.aaaa"
        android:textSize="10sp"
        android:layout_marginBottom="5dp"
        android:textColor="#64000000" />

    <TextView
        android:id="@+id/tv_child_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_child_home"
        android:text="作者@作品名称"
        android:textSize="10sp"
        android:layout_marginBottom="5dp"
        android:textColor="#64000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_child_text"
        android:layout_below="@+id/tv_child_author"
        android:text="文本"
        android:textSize="16sp" />



    <RelativeLayout
        android:id="@+id/rela_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/iv_home_dialy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/diary" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_home_dialy"
            android:text="小记" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/share_image"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_home_share"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_home_share"
            android:text="10000"
            android:id="@+id/tv_home_love"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_like"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_home_love"/>
    </RelativeLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_child_time"
        android:text="2016.8.15"
        android:layout_above="@+id/rela_home"
        android:layout_alignParentRight="true"
        android:paddingBottom="20dp" />
</RelativeLayout>
